@using ShopThoiTrangASP.Models
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/LayoutSite.cshtml";  
}

<h2 class="title text-center">Check Out Shopping Cart</h2>

@if (Session["Cart"] != null)
{
    <div class="container">
        <!-- Bao quanh bảng sản phẩm với container để giữ layout -->
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Sub Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cart in (List<Cart>)Session["Cart"])
                {
                    double p = Convert.ToDouble(cart.product.Price);
                    int q = Convert.ToInt32(cart.Quantity);
                    double subtotal = p * q;
                    <tr>
                        <td>@cart.product.Name</td>
                        <td>@cart.Quantity</td>
                        <td>@Html.FormatValue(cart.product.Price, "{0:C}")</td>
                        <td>@Html.FormatValue(subtotal, "{0:C}")</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="row">
            @{
                var temp = (List<Cart>)Session["Cart"];
                var total = temp.Sum(c => c.Quantity * c.product.Price);
            }
            <div class="col-md-10 col-md-offset-2">
                <p align="right">Total: @Html.FormatValue(total, "{0:C}")</p>
            </div>
        </div>
    </div>
}
else
{
    <h4>No items in your cart!</h4>
}

<!-- Customer Information Form -->
<div class="container">
  
    <h3>Customer's Information</h3>

    @using (Html.BeginForm("ProcessOrder", "ShoppingCart", FormMethod.Post, new { id = "customer-form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-md-2">Customer's Name</label>
                <div class="col-md-10">
                    <input type="text" name="cusName" class="form-control" required />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Customer's Phone</label>
                <div class="col-md-10">
                    <input type="text" name="cusPhone" class="form-control" required />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Customer's Email</label>
                <div class="col-md-10">
                    <input type="email" name="cusEmail" class="form-control" required />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Customer's Address</label>
                <div class="col-md-10">
                    <input type="text" name="cusAddress" class="form-control" required />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Process Order" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    $("#customer-form").validate({
        rules: {
            cusName: { required: true },
            cusPhone: { required: true },
            cusEmail: { required: true },
            cusAddress: { required: true }
        }
    });
</script>
