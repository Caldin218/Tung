</html>

<script>
    $(function () {
        setInterval(function () {
            $.ajax({
                url: "/Trangchu/ServerTime",
                success: function (response) {
                    $("p#clock").html(response);
                } // đóng đúng hàm success
            });
        }, 1000); // kết thúc setInterval
    });
</script> <!--Clock-->


