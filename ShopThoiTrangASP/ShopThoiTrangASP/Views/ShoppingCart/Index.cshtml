@using ShopThoiTrangASP.Models
@{
    ViewBag.Title = "Shopping Cart";
    Layout = "~/Views/Shared/LayoutSite.cshtml";
}

<!-- Main Content Section -->
<div id="maincontent">
    <h2 class="title text-center">Shopping Cart</h2>

    @if (Session["Cart"] != null)
    {
        using (Html.BeginForm("UpdateCart", "ShoppingCart", FormMethod.Post))
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Sub Total</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cart in (List<Cart>)Session["Cart"])
                    {
                        double price = Convert.ToDouble(cart.product.Price);
                        int quantity = Convert.ToInt32(cart.Quantity);
                        double subtotal = price * quantity;
                        <tr>
                            <td>@cart.product.Name</td>
                            <td>
                                <input type="text" name="quantity" class="quantity" value="@cart.Quantity" />
                            </td>
                            <td>@string.Format("{0:C}", cart.product.Price)</td>
                            <td>@string.Format("{0:C}", subtotal)</td>
                            <td>
                                @Html.ActionLink("Delete", "RemoveItem", "ShoppingCart", new { Id = cart.product.ID }, new { onclick = "return confirm('Are you sure?');" })
                            </td>
                        </tr>
                    }
                    <tr>
                        @{
                            var tempCart = (List<Cart>)Session["Cart"];
                            var total = tempCart.Sum(x => x.Quantity * x.product.Price);
                        }
                        <td colspan="2">
                            @Html.ActionLink("Continue Shopping", "Index", "Trangchu") &nbsp;
                            @Html.ActionLink("Empty Cart", "ClearCart", "ShoppingCart") &nbsp;
                            @Html.ActionLink("Check Out", "Checkout", "ShoppingCart") &nbsp;
                            <input type="submit" value="Update Cart" />
                            <br />
                            <span id="errmsg" style="color:red"></span>
                        </td>
                        <td align="right">Total:</td>
                        <td colspan="2">@string.Format("{0:C}", total)</td>
                    </tr>
                </tbody>
            </table>
        }
    }
    else
    {
        <h4>No items in your cart!</h4>
    }
</div> <!-- End of Main Content Section -->

<script type="text/javascript">
    $(document).ready(function () {
        $(".quantity").keypress(function (e) {
            // Allow only numbers and control keys
            if (!(e.which >= 48 && e.which <= 57) && e.which !== 8 && e.which !== 0) {
                e.preventDefault();
            }
        });
    });
</script>
